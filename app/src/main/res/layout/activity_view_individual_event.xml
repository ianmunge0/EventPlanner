<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical" >

    <TextView
            android:id="@+id/ttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
            android:id="@+id/ddescription"
            android:layout_below="@+id/ttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
            android:id="@+id/ddate"
            android:layout_below="@+id/ddescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
            android:id="@+id/ttime"
            android:layout_below="@+id/ddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
            android:id="@+id/ccreator"
            android:layout_below="@+id/ttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Creator"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
            android:id="@+id/aattendants"
            android:layout_below="@+id/ccreator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
            android:id="@+id/vvenue"
            android:layout_below="@+id/aattendants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Venue"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    <Button
            android:id="@+id/btncheckin"
            android:text="Check In"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    <TextView
            android:id="@+id/texxtvieww"
            android:layout_width="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_marginTop="187dp"
            android:layout_toEndOf="@+id/pasttitle"/>

</RelativeLayout>
